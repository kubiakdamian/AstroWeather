<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="@color/sunFragmentBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/sun"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sun"
        android:textSize="50sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sunriseid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sunrise"
        android:textColor="#000"
        android:textSize="25sp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/sunriseazimuthid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sunrise azimuth:"
        android:textColor="#000"
        android:textSize="25sp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/sunsetid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sunset:"
        android:textColor="#000"
        android:textSize="25sp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/sunsetazimuthid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sunset azimuth:"
        android:textColor="#000"
        android:textSize="25sp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/twilightid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Twilight:"
        android:textColor="#000"
        android:textSize="25sp"
        android:gravity="center">
    </TextView>

    <TextView
        android:id="@+id/dawnid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Dawn:"
        android:textColor="#000"
        android:textSize="25sp"
        android:gravity="center">
    </TextView>



</LinearLayout>